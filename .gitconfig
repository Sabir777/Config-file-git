[core]
	editor = vim
	quotepath = false

[submodule]
	recurse = true

[branch "main"]
	remote = origin
	merge = main

[alias]
	alias = !git config --edit --global
	d    = diff
	dc   = diff --cached
	g    = log --all --graph --oneline --decorate --color
	c    = commit
	adc  = !git add . && git commit
	ca   = commit -a
	amend = !git add . && git commit --amend
	s    = status
	rhh  = reset --hard HEAD
	co   = checkout
	com  = checkout main
	cob  = checkout -b
	b    = branch
	bd   = branch -D
	bf   = branch -f
	pl   = pull
	pla  = pull --all
	ps   = push
	puo  = push -u origin
	psa   = push origin --all
	psf   = push --force-with-lease
	del = push --delete origin
	track = checkout --track
	fpr = fetch --prune

